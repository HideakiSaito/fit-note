<%= render "menu" %>
<%= form_tag "", method: :get do %>
  <p>
    <%= label_tag "start_day","開始日" %>
    <%= date_field_tag "start_day", params[:start_day] %>
    <%= label_tag "end_day","終了日" %>
    <%= date_field_tag "end_day", params[:end_day] %>
    
    グラフの集計単位[
    <%= label_tag "analysis_scope_day","１日" %>
    <%= radio_button "analysis","scope","day",checked: true %>
    <%= label_tag "analysis_scope_week","１週間 " %>
    <%= radio_button "analysis","scope","week",checked: false %>
    ]
    &nbsp;
    <%= submit_tag "検索" %>
  </p>
<% end %>
<%= high_chart("chart", @chart) %>
<%= high_chart("chart2", @chart2)  if @chart2 %>
<% if @chart3 %>
  <%= high_chart("chart3", @chart3) %>
<% end %>
