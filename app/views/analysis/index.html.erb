<%= render "menu" %>
<%= form_tag "", method: :get do %>
  <p>
    <%= label_tag "start_day","開始日" %>
    <%= date_field_tag "start_day", params[:start_day] %>
    <%= label_tag "end_day","終了日" %>
    <%= date_field_tag "end_day", params[:end_day] %>
    
    グラフの集計単位[
    <% if @scop_day_label != "" %>
      <%= label_tag "scope_day",@scop_day_label %>
      <%= radio_button_tag "scope","day", params[:scope].eql?("day") %>
    <% end %>
    <% if @scop_week_label != "" %>
      <%= label_tag "scope_week",@scop_week_label %>
      <%= radio_button_tag "scope","week", params[:scope].eql?("week")  %>
    <% end %>
    ]
    &nbsp;
    <%= submit_tag "検索" %>
  </p>
<% end %>
<%= high_chart("chart", @chart) %>
<%= high_chart("chart2", @chart2)  if @chart2 %>
<% if @chart3 %>
  <%= high_chart("chart3", @chart3) %>
<% end %>
