<% if flash.alert %><p class="alert"><%= flash.alert %></p><% end %>
<%= form_tag :session do %>
<table id="login_form">
  <tr>
    <td style="text-align: right">ID(メール)：</td>
    <td><%= text_field_tag "name", "", style: "width: 200px",class: "form-control"  %></td>
  </tr>
  <tr>
    <td style="text-align: right">パスワード：</td>
    <td><%= password_field_tag "password", "", style: "width: 200px",class: "form-control"  %></td>
  </tr>
  <tr>
    <td colspan="2" style="text-align: center">
    <br/>
    <%= submit_tag "ログイン" ,class: "btn btn-success btn-block" %></td>
  </tr>
</table>
<% end %>
