<p id="notice"><%= notice %></p>

<h1>Listing Conditions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Score</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conditions.each do |condition| %>
      <tr>
        <td><%= condition.name %></td>
        <td><%= condition.score %></td>
        <td><%= condition.memo %></td>
        <td><%= link_to 'Show', admin_condition_path(condition) %></td>
        <td><%= link_to 'Edit', edit_admin_condition_path(condition) %></td>
        <td><%= link_to 'Destroy', admin_condition_path(condition), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

