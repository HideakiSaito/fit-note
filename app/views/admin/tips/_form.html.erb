<%= form_for([:admin,@tip]) do |f| %>
  <% if @tip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tip.errors.count, "error") %> prohibited this tip from being saved:</h2>
      <ul>
      <% @tip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name , { class: "form-control"} %>
  </div>
  <div class="field">
    <%= f.label :tip_category_id %><br>
    <%= f.collection_select :tip_category_id ,
      TipCategory.all.order(:id), :id , :name ,
      {prompt: true} , { class: "form-control"} %>
  </div>
  <div class="field">
    <%= f.label :tip_recommendation_id %><br>
    <%= f.collection_select :tip_recommendation_id ,
      TipRecommendation.all.order(:id), :id , :name ,
      {prompt: true} , { class: "form-control"} %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description , { class: "form-control",cols: 5,rows: 5,style: "width:100%;"} %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author , { class: "form-control"} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
