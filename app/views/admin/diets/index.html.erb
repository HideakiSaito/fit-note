<p id="notice"><%= notice %></p>

<h1>Listing Diets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diets.each do |diet| %>
      <tr>
        <td><%= diet.name %></td>
        <td><%= link_to 'Show', admin_diet_path(diet) %></td>
        <td><%= link_to 'Edit', edit_admin_diet_path(diet) %></td>
        <td><%= link_to 'Destroy', admin_diet_path(diet), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

