<p id="notice"><%= notice %></p>

<%= form_for @search_form , :url => equipment_index_url , :remote => true, :html => {:method => :get} do |f| %>
  <%= f.search_field :q %>
  <%= f.submit '検索' %>
<% end %>

<h1>トレーニング器具一覧</h1>
<div id="equipments">
  <% @equipment.each do |equipment| %>
    <%= render 'show' , equipment: equipment %>
  <% end %>
</div>

<br/>

<h1> トレーニング器具 追加 </h1>
<%= render 'form2' , equipment: @new_equipment, submit_text: '新規' %>


