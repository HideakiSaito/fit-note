<p id="notice"><%= notice %></p>
<h1>ノート</h1>
<%= form_for @search_form , :url => pages_path, :remote => true, :html => {:method => :get} do |f| %>
  <%= f.search_field :q %>
  <%= f.submit '検索' %>
<% end %>
<button type="button" class="btn btn-primary mini-size"
        onClick="location.href='/pages/new'">新しいページを作る。</button>
 <%= check_box_tag "page[hidden_lines]",true,true %> show lines
 <%= check_box_tag "page[hidden_chart]" ,true ,true%> show chart 
<div id="pages" class="row" ><%= render @pages %></div>
<%= will_paginate @pages %>
