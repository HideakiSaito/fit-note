<style type='text/css'>
	html, body {
		margin: 0; padding: 0;
	}
	body {
		font-family: sans-serif;
		text-align: center;
		font-size: small;
	}
	.life {
		border: 0   px solid white;
		margin: 0px;
	}
	.week {
		display: inline-block;
		box-sizing: border-box;
		/*width: calc(100%/52);*/
        width: 2px;
		height: 5px; line-height: 0px;
		outline: 1px solid black;
        background-color: cyan;
		overflow: hidden;
	}
    .heaed{
        display: inline-block;
		box-sizing: border-box;
		/*width: calc(100%/52);*/
        width: 4px;
		height: 5px; line-height: 0px;
		outline: 1px solid black;
		overflow: hidden;
    }
    .interactive {
		-webkit-transition: background-color 1s;
		transition: background-color 1s;
	}
	.clicked {
		background-color: #FA8E6D !important;
	}
	.paniced {
		background-color: #FF3300 !important;
	}
	.disable {
		display: none;
	}

	#monster {
		position: absolute;
		top: 0;
		z-index: 0;
	}

	@media (max-width: 720px) {
		.week {
			color: transparent;
			height: 5px; line-height: 5px;
		}
	}
</style>
<h1>Your Life</h1>
<% if current_user %>
<div>
birthday:
 <%= current_user.birthday %>
</div>
 <% 
    diff =  Date.today - current_user.birthday
    lifepast = (diff/7).ceil.to_i   
    lifecount = 0
 %>
  <div>
 Want ToDo Count:
 <%= current_user.want_to_dos.count %>
 </div>
<% end %>
<div class='life'>
<% for year in 0..80 %>
  <div class='year' style="font-size:0.7rem;line-height:4px;">
  <div class="heaed"><%= year %></div>
  <% for week in 0..52
     lifecount += 1
     if lifepast > lifecount 
       dispclass = "paniced"
       else
       if lifepast == lifecount
        dispclass = "clicked"
       end
       dispclass = ""
     end
   %>
    <div style="line-height:4px;" class='week <%= dispclass %> '></div>
  <% end %>
  </div>
<% end %>
</div>
