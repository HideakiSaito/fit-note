<p id="notice"><%= notice %></p>

<h3>今日のおすすめメニュー</h3> 
  <% @items.each do |item| %>
    <li>
    <%= item.name %> . <%=  item.part.name  %> -> <%=  item.reps %>回
    </li>
  <% end %>

<h1>トレーニング記録一覧</h1>
<table class="table table-striped"
       style="text-align: right; width: 100%;">
  <thead>
    <tr>
      <th>Day</th>
      <th>
        Item
        Weight
        Reps
        Set
      </th>
    </tr>
  </thead>

  <tbody>
    <% @trainings.each do |training| %>
      <tr>
        <td><%= training.day %> . <%=  training.num  %></td>
        <td>
          <%= link_to training.item.index_name, training %>
          <%= training.weight %> kg /   
          <%= training.reps %>  
          [<%= training.set %>]  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Training', new_training_path %>
