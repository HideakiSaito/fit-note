    <%= f.number_field :weight %>
  </div>
  <div class="field">
    <%= f.label :reps %><br>
    <%= f.number_field :reps %>
  </div>
  <div class="field">
    <%= f.label :set %><br>
    <%= f.number_field :set %>
  </div>
  <div class="field">
    <%= f.label :mode_id %><br>
    <%= f.text_field :mode_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
