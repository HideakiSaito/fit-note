<%= form_for(@training) do |f| %>
  <% if @training.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@training.errors.count, "error") %> prohibited this training from being saved:</h2>
      <ul>
      <% @training.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="day-buhin"  style="display:flex;justify-content:flex-start;" >
  <div class="field" style="padding-right:1em;">
    <%= f.label :day %><br>
    <%= f.date_select :day ,
      use_month_numbers: true %>
  </div>
  <div class="field" style="padding-right:1em;">
    <%= f.label :num %><br>
    <%= f.number_field :num ,style: "width:3em;" %>
  </div>
</div>

  <div class="field">
    <%= f.label :item_id %><br>
    <%= f.collection_select :item_id ,
      Item.all, :id , :index_name,
        :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :weight %><br>
    <%= f.number_field :weight %>
  </div>
  <div class="field">
    <%= f.label :reps %><br>
    <%= f.number_field :reps %>
  </div>
  <div class="field">
    <%= f.label :set %><br>
    <%= f.number_field :set %>
  </div>
  <div class="field">
    <%= f.label :mode_id %><br>
    <%= f.collection_select :mode_id ,
      Mode.all, :id , :name,
        :prompt => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
