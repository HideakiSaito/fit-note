<p id="notice"><%= notice %></p>

<h1>Listing Page Images</h1>

<table>
  <thead>
    <tr>
      <th>Page</th>
      <th>Data</th>
      <th>Content type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @page_images.each do |page_image| %>
      <tr>
        <td><%= page_image.page %></td>
        <td><%= page_image.data %></td>
        <td><%= page_image.content_type %></td>
        <td><%= link_to 'Show', page_image %></td>
        <td><%= link_to 'Edit', edit_page_image_path(page_image) %></td>
        <td><%= link_to 'Destroy', page_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

